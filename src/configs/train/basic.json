{
    "n_gpu": 2,
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size": 5,
            "gamma": 0.6
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "valid_auc",
        "monitor_mode": "max"
    },
    "trainer_args": {
        "show_all_loss": true,
        "log_step": 100,
        "finetune_fc_epoch": 3
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
